-# frozen_string_literal: true
= simple_form_for(@season) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :startSeason
    = f.input :endSeason

  .form-actions
= f.button :submit