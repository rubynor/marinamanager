= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user_level
    = f.number_field :user_level
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :street_name
    = f.text_field :street_name
  .field
    = f.label :street_number
    = f.text_field :street_number
  .field
    = f.label :post_code
    = f.text_field :post_code
  .actions
    = f.submit 'Save'
