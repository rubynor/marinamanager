  - if @user.errors.any?
    #error_explanation
      %h2= "#{@user.errors.count} feil hindret denne brukeren Ã¥ bli lagret:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
