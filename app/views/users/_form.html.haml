= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{@user.errors.count} feil hindret denne brukeren Ã¥ bli lagret:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  %div.form-row
    %div.form-group.col-md-6
      .field
        = f.label :first_name
        = f.text_field :first_name, class: "form-control"
      .field
        = f.label :last_name
        = f.text_field :last_name, class: "form-control"
      .field
        = f.label :email
        = f.text_field :email, class: "form-control"
      .field
        = f.label :phone_number
        = f.text_field :phone_number, class: "form-control"
    %div.form-group.col-md-6
      .field
        = f.label :street_name
        = f.text_field :street_name, class: "form-control"
      .field
        = f.label :street_number
        = f.text_field :street_number, class: "form-control"
      .field
        = f.label :post_code
        = f.text_field :post_code, class: "form-control"
    .actions
      = f.submit 'Lag bruker', class: "btn btn-primary btn-lg text-light btn-sm"
      = link_to 'Tilbake', users_path, class: "btn btn-primary btn-lg text-light btn-sm"
