-# Velg båt [Liste over egne båter + legg til ny båt]
-# Velg tjenester [Table med checkbox'er]

= form_for @service_order do |f|
  - if @service_order.errors.any?
    #error_explanation
      %h2= "#{@service_order.errors.count} feil hindret denne tjenestebestillingen fra å bli lagret:"
      %ul
        - @service_order.errors.full_messages.each do |message|
          %li= message
  %div.form-row
    %div.form-group.col-md-2
      .field
        = f.label :bruker
        - if current_user.user_level == 1
          %div.dropdown
            = f.collection_select(:user_id, User.all, :id, :first_name)
        - else
          %p.form-control= current_user.full_name

      .field
        = f.label :tjeneste
        %div.dropdown
          = f.collection_select(:service_id, Service.all, :id, :title)
    %div.form-group.col-md-2
      .field
        = f.label :begynner
        = f.date_field :start_service_order, class: "form-control"
    .field
      = f.label :utgår
      = f.date_field :end_service_order, class: "form-control"

  .field
    - unless current_user.user_level == 1
      = f.hidden_field :user_id, value: current_user.id

  .actions
    = f.submit 'Lagre endringer', class: "btn btn-primary btn-lg text-light btn-sm"
    = link_to 'Tilbake', service_orders_path, class: "btn btn-primary btn-lg text-light btn-sm"
