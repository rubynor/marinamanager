= form_for @service_order do |f|
  - if @service_order.errors.any?
    #error_explanation
      %h2= "#{@service_order.errors.count} feil hindret denne bestillingen fra å bli lagret:"
      %ul
        - @service_order.errors.full_messages.each do |message|
          %li= message
  %div.form-row
    %div.form-group.col-md-4
      .field
        = f.label :bruker
        \:
        = f.label "#{@service_order.user.first_name} "
        = "#{@service_order.user.last_name}"
    %div.form-group.col-md-4
      .field
        = f.label :tjeneste
        \:
        = f.label "#{@service_order.service.title}"
  %div.form-row
    %div.form-group-col-md-2
      .field
        = f.label :begynner
        = f.date_field :start_service_order, class: "form-control"
    %div.form-group-col-md-2
      .field
        = f.label :utgår
        = f.date_field :end_service_order, class: "form-control"

  %br
  .actions
    = f.submit 'Lagre', class: "btn btn-primary btn-lg text-light btn-sm"
    = link_to 'Tilbake', service_orders_path, class: "btn btn-primary btn-lg text-light btn-sm"
