    #error_explanation
      %h2= "#{@berth_order.errors.count} feil hindret denne bestillingen fra 책 bli lagret:"
      %ul
        - @berth_order.errors.full_messages.each do |message|
          %li= message

  %div.form-row
    %div.col
      %div.row
        .field
          = f.label :user, 'B책teier:'
          = @berth_order.boat.user.email
      %div.row
        .field
          = f.label :name, 'B책tnavn:'
          = f.label @berth_order.boat.name
      %div.row
        .field
          = f.label :season, 'Sesong:'
          = f.collection_select(:season_id, @current_seasons, :id, :title)
      %div.row
        .field
          = f.label :status, 'Status:'
