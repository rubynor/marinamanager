%div.container
  = form_for @berth_order do |f|
    - if @berth_order.errors.any?
      #error_explanation
        %h2= "#{@berth_order.errors.count} feil hindret denne bestillingen fra Ã¥ bli lagret:"
        %ul
          - @berth_order.errors.full_messages.each do |message|
            %li= message


    = render "#{@berth_order.current_step}_step", :f => f

    %p
      = f.submit 'Fortsett', class: "btn btn-primary btn-lg text-light btn-sm"
      = f.submit 'Tilbake', name: 'back_button', class: "btn btn-primary btn-lg text-light btn-sm" unless @berth_order.first_step?
    %p
      = link_to 'Liste over bestillinger', berth_orders_path, class: "btn btn-primary btn-lg text-light btn-sm"