          = f.collection_select(:berth_id, @available_berths, :id, :name)


    .actions
      = f.submit 'Lagre', class: "btn btn-primary btn-lg text-light btn-sm"
      = link_to 'Tilbake', berth_orders_path, class: "btn btn-primary btn-lg text-light btn-sm"
