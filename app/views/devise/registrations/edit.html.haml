%h2
  Endre #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Avventer bekreftelse fra: #{resource.unconfirmed_email}
  .field
    = f.label :current_password
    %i (tast inn ditt nåværende passord for å bekrefte endringene)
    %br/
    = f.password_field :current_password, autocomplete: "off"
  .field
    = f.label :new_password
    %i (fylles ut kun om du vil endre passord)
    %br/
    = f.password_field :password, autocomplete: "off"
    - if @minimum_password_length
      %br/
      %em
        = @minimum_password_length
        characters minimum
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "Update"
%h3 Slett min bruker
%p
  Ikke fornøyd? #{button_to "Slett min bruker", registration_path(resource_name), data: { confirm: "Er du sikker?" }, method: :delete}
= link_to "Tilbake", :back
