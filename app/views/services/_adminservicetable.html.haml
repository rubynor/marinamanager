%table.table
  %thead
    %tr
      %th{scope: "col"} Tjeneste
      %th{scope: "col"} Beskrivelse
      %th{scope: "col"} Pris pr. mnd
      %th{scope: "col"} Tilgjengelig
      %th
      %th
      %th

    %tbody
      - @services.each do |service|
        %tr
          %td= service.title
          %td= service.description
          %td= service.price_per_month
          %td
            - if service.active
              Ja
            - else
              Nei
          %td= link_to 'Vis', service, class: "btn btn-primary btn-lg text-light btn-sm"
          %td= link_to 'Endre', edit_service_path(service), class: "btn btn-primary btn-lg text-light btn-sm"
          %td= link_to 'Slett', service, method: :delete, data: { confirm: 'Er du sikker?' }, class: "btn btn-primary btn-lg text-light btn-sm"
%br
= link_to 'Ny tjeneste', new_service_path, class: "btn btn-primary btn-lg text-light btn-sm"
