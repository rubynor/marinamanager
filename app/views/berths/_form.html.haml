= form_for @berth do |f|
  - if @berth.errors.any?
    #error_explanation
      %h2= "#{pluralize(@berth.errors.count, "error")} prohibited this berth from being saved:"
      %ul
        - @berth.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :berth_number
    = f.number_field :berth_number
  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :price_per_month
    = f.text_field :price_per_month
  .field
    = f.label :in_service
    = f.check_box :in_service
  .actions
    = f.submit 'Save'
