= form_for @boat do |f|
  - if @boat.errors.any?
    #error_explanation
      %h2= "#{pluralize(@boat.errors.count, "error")} prohibited this boat from being saved:"
      %ul
        - @boat.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :reg_number
    = f.text_field :reg_number
  .field
    = f.label :model
    = f.text_field :model
  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :length
    = f.text_field :length
  .actions
    = f.submit 'Legg til'
