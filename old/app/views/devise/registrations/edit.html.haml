%h2 Edit #{resource_name.to_s.humanize}

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!

  .field
    = f.label :epost 
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
 
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
   
  .field
    = f.label :passord
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, autocomplete: "off"
    - if @minimum_password_length
      %br/
      %em
        Minst 
        = @minimum_password_length
        tegn
   
  .field
    = f.label :passordbekreftelse
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
    
  .field
    = f.label :nåværende_passord
    %i (vi må ha ditt nåværende passord for å bekrefte endringene)
    %br/
    = f.password_field :current_password, autocomplete: "off"
    
  .actions
    = f.submit "Oppdater"
  
%h3
  Slett bruker
%p
  Misfornøyd? #{button_to "Slett bruker", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
  \#{link_to "Back", :back}
